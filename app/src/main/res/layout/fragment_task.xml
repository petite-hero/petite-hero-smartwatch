<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hero.components.TaskFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtListPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70px"
                android:text="Con không có công việc nào"
                android:textAlignment="center"
                android:textSize="16px"
                android:textColor="@color/colorListPlaceholder"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/taskListActive"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"/>
            <View
                android:id="@+id/taskListSeparator"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                android:background="#f7f7f7"
                android:visibility="gone"/>
            <ListView
                android:id="@+id/taskListLate"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="20px"
                android:divider="@android:color/white"
                android:dividerHeight="10px"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
