<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:clickable="true"
    android:onClick="flipTask"
    tools:context="hero.main.MainScreenActivity">

    <RelativeLayout
        android:id="@+id/taskFrontFaceContainer"
        android:layout_width="match_parent"
        android:layout_height="160px">
        <TextView
            android:id="@+id/txtName"
            android:layout_width="160px"
            android:layout_height="120px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="20px"
            android:textSize="30px"
            android:textColor="@android:color/white"
            android:lineHeight="30px"
            android:textFontWeight="700"/>
        <TextView
            android:id="@+id/txtTo"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="20px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textSize="16px"
            android:textColor="@android:color/white"/>
        <ImageView
            android:id="@+id/imvIconTaskType"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5px"
            android:layout_marginBottom="5px"
            android:padding="6px"
            android:elevation="4px"/>
        <View
            android:id="@+id/decorLeft"
            android:layout_width="10px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/taskBackFaceContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:visibility="gone">
        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:textSize="14px"
            android:textColor="@android:color/white"/>
        <ImageView
            android:id="@+id/imvIconCamera"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="6px"
            android:layout_margin="20px"
            android:src="@drawable/icon_camera"
            android:tint="@android:color/white"/>
        <View
            android:id="@+id/decorLeftBack"
            android:layout_width="10px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>