<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/taskContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160px"
    android:clickable="true"
    android:onClick="flipQuest"
    tools:context="hero.main.MainScreenActivity">

    <RelativeLayout
        android:id="@+id/questFrontFaceContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160px">
        <ImageView
            android:id="@+id/imvIconBadge"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="160px"
            android:layout_height="28px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px"
            android:textAlignment="center"
            android:textSize="20px"
            android:textFontWeight="700"
            android:textColor="@android:color/white"/>
        <View
            android:id="@+id/decorLeft"
            android:layout_width="10px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/questBackFaceContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:visibility="gone">
        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:textSize="14px"
            android:textColor="@android:color/white"/>
        <View
            android:id="@+id/decorLeftBack"
            android:layout_width="10px"
            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>